<%= link_to local_assigns[:quick_link].url, target: "_blank" do %>
  <div class="flex items-center p-2 px-4 rounded-full bg-gray-300 hover:bg-gray-400 cursor-pointer">
    <%= local_assigns[:quick_link].name %>

    <div class="ml-2 text-gray-500 hover:text-gray-700">
      <%= link_to quick_link_path(local_assigns[:quick_link]), data: { turbo_method: :delete } do %>
        <i class="fa-solid fa-xmark text-xs"></i>
      <% end %>
    </div>
  </div>
<% end %>